<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.UpdateTaskController">
   <children>
      <AnchorPane layoutX="10.0" layoutY="10.0" prefHeight="800.0" prefWidth="1200.0" />
      <ImageView fitHeight="819.0" fitWidth="1220.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../images/addTaskScreen.jpg" />
         </image>
      </ImageView>
      <JFXTextField fx:id="addTaskName" alignment="CENTER" focusColor="#1a65fc" layoutX="167.0" layoutY="198.0" prefHeight="62.0" prefWidth="906.0" promptText="Task Name">
         <font>
            <Font name="Helvetica" size="18.0" />
         </font>
      </JFXTextField>
      <JFXTextField fx:id="addTaskDescription" alignment="CENTER" focusColor="#1a65fc" layoutX="167.0" layoutY="292.0" prefHeight="62.0" prefWidth="906.0" promptText="Task Description">
         <font>
            <Font name="Helvetica" size="18.0" />
         </font>
      </JFXTextField>
      <JFXCheckBox fx:id="highPick" checkedColor="RED" layoutX="786.0" layoutY="431.0" text="High" textFill="#666666" unCheckedColor="#1a65fc">
         <font>
            <Font name="Helvetica" size="18.0" />
         </font>
      </JFXCheckBox>
      <JFXCheckBox fx:id="midPick" checkedColor="#ddff00" layoutX="696.0" layoutY="431.0" text="Mid" textFill="#666666" unCheckedColor="#1a65fc">
         <font>
            <Font name="Helvetica" size="18.0" />
         </font>
      </JFXCheckBox>
      <JFXCheckBox fx:id="lowPick" checkedColor="#00ff09" layoutX="593.0" layoutY="431.0" text="Low" textFill="#666666" unCheckedColor="#1a65fc">
         <font>
            <Font name="Helvetica" size="18.0" />
         </font>
      </JFXCheckBox>
      <JFXButton fx:id="taskSaveButton" layoutX="508.0" layoutY="670.0" prefHeight="82.0" prefWidth="217.0" styleClass="button-listview" stylesheets="@../../images/style.css" text="Save" textFill="WHITE" />
      <JFXDatePicker fx:id="taskDateBefore" defaultColor="#1a65fc" layoutX="461.0" layoutY="516.0" />
      <Label layoutX="329.0" layoutY="521.0" text="Finish Before  -" textFill="#666666">
         <font>
            <Font name="Helvetica" size="18.0" />
         </font>
      </Label>
      <JFXTimePicker fx:id="taskTimeBefore" defaultColor="#1a65fc" layoutX="706.0" layoutY="516.0" />
      <Label fx:id="addTaskWarning" alignment="CENTER" layoutX="437.0" layoutY="94.0" prefHeight="21.0" prefWidth="435.0" text="Please Fill all the fields" textFill="RED" visible="false" />
      <Label layoutX="347.0" layoutY="431.0" prefHeight="21.0" prefWidth="244.0" text="How important is the task - " textFill="#666666">
         <font>
            <Font name="Helvetica" size="18.0" />
         </font>
      </Label>
      <ImageView fx:id="taskBackButton" fitHeight="93.0" fitWidth="99.0" layoutX="167.0" layoutY="41.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../images/backButton.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
